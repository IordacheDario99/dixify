<Dictionary>
    name: "dictionary"
    typed_word: typed_word
    RelativeLayout:

        Label:
            text: "Search definition for a word"
            font_size: 40
            bold: True
            pos_hint: { 'y': 0.1 ,'x': .01}

        TextInput:
            id: typed_word
            size: 500,40
            size_hint: None, None
            multiline: False
            background_color: 1, 1, 1, 0.6
            font_size: 20
            pos_hint: { 'y': 0.5 ,'x': .2}

        Button:
            size: 200,50
            size_hint: None, None
            pos_hint: { 'y': 0.2 ,'x': .38}
            text: "Menu"
            on_release:
                app.root.current = "main_menu"
                root.manager.transition.direction = "down"
        Button:
            size: 200,50
            size_hint: None, None
            pos_hint: { 'y': 0.3 ,'x': .38}
            text: "Search"
            on_release:
                root.search()
